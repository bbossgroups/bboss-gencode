	      											#else
	      											<input type="text" class="Wdate" id="${condition.fieldName}" name="${condition.fieldName}" onClick="WdatePicker(#if($condition.dateformat && !$condition.dateformat.equals("")){dateFmt:'$condition.dateformat'}#end)">
