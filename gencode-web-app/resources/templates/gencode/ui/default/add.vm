<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>新增${moduleCNName}</title>
		<%@ include file="/common/jsp/css.jsp"%>
	</head>
	<body>
		<div class="form_box">
			<form id="addForm" name="addForm" method="post">
			    #foreach($field in $hiddenfields)
				  	<input id="$field.fieldName" name="$field.fieldName" type="hidden"  #if($field.defaultValue && !$field.defaultValue.equals(""))value="${field.defaultValue}"#end/>
			  	#end
				<table border="0" cellpadding="0" cellspacing="0" class="table4">
					#foreach($field in $fields)
						#if( $foreach.index % 3 == 0)
							#if($foreach.index > 0)						</tr>#end
						<tr>
						#end
						<th width=85px >
							#if(!$genI18n)						$field.fieldCNName#else						<pg:message code="$namespacei18n.$field.fieldName"/>#end：
						</th>
						<td width=140px>
							#if($field.datetype)								
								<input type="text"  id="${field.fieldName}" name="${field.fieldName}" #if($field.defaultValue && !$field.defaultValue.equals(""))value="${field.defaultValue}" #end onClick="WdatePicker(#if($field.dateformat && !$field.dateformat.equals("")){dateFmt:'$field.dateformat'}#end)" #if($field.required)class="Wdate input_default easyui-validatebox" required="true"/><font color="red">*</font>#else class="Wdate"/>#end								
							#else
								<input id="$field.fieldName" name="$field.fieldName" type="text" #if($field.defaultValue && !$field.defaultValue.equals(""))value="${field.defaultValue}" #end #if($field.required)class="w120 input_default easyui-validatebox" required="true"/><font color="red">*</font>#else/>#end
							#end	
						</td>
						#if($foreach.index == ($fields.size() - 1))						
					</tr>	
						#end
					#end	
				</table>			
			
			<div class="btnarea" >
				<a href="javascript:void(0)" class="bt_1" id="addButton" onclick="dosubmit()"><span><pg:message code="sany.pdp.common.operation.add"/></span></a>
				<a href="javascript:void(0)" class="bt_2" id="resetButton" onclick="doreset()"><span><pg:message code="sany.pdp.common.operation.reset"/></span></a>
				<a href="javascript:void(0)" class="bt_2" id="closeButton" onclick="closeDlg()"><span><pg:message code="sany.pdp.common.operation.exit"/></span></a>
				<input type="reset" id="reset" style="display: none;" />
			</div>
			</form>
		</div>
	</body>
<script language="javascript">
var api = frameElement.api, W = api.opener;


   function dosubmit()
   {
		
		$.ajax({
		   type: "POST",
			url : "add${entityName}.page",
			data :formToJson("#addForm"),
			dataType : 'json',
			async:false,
			beforeSend: function(XMLHttpRequest){
					var validated = $("#addForm").form('validate');
			      	if (validated){
			      		blockUI();	
			      		XMLHttpRequest.setRequestHeader("RequestType", "ajax");
			      	}
			      	else
			      	{			      		
			      		return false;
			      	}				 	
				},
			success : function(responseText){
				//去掉遮罩
				unblockUI();
				if(responseText=="success"){
					W.$.dialog.alert("新增记录成功",function(){	
							W.modifyQueryData();
							api.close();
					},api);													
				}else{
					W.$.dialog.alert("新增出错",function(){},api);
				}
			}
		  });
   	 }
function doreset(){
	$("#reset").click();
}
</script>