function delBatch(){
	var ${primaryKeyName}s=[];
	var i = 0;
	 $("#tb tr:gt(0)").each(function() {	 
            if ($(this).find("#CK").get(0).checked == true) {
                 ${primaryKeyName}s.push($(this).find("#${primaryKeyName}").val());                
                i++;
