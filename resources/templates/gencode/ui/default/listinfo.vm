<%@ page language="java"  pageEncoding="utf-8"%>
<%@ include file="/common/jsp/importtaglib.jsp"%>

<!-- 
	描述:${moduleCNName}管理分页列表界面。
	作者:$author
	版权:$company
	版本:$version 
	日期:$gendate
-->
#set( $start = '${' )
#set( $end = '}' )
#macro( fieldattr $field)
#if($field.dateformat && !$field.dateformat.equals("")) dateformat="$field.dateformat" #end #if($field.numformat  && !$field.numformat.equals("")) numerformat="$field.numformat" #end
#end

<div id="customContent">
<pg:empty actual="$start${entityVarName}s$end" evalbody="true">
    <pg:yes>
	<div class="nodata">
	<img src="${start}pageContext.request.contextPath${end}/html/images/no_data.jpg" />
	</div>
	</pg:yes>
	<pg:no>
		<pg:pager scope="request"  data="${entityVarName}s" desc="true" isList="false" containerid="custombackContainer" selector="customContent">
#foreach($condition in $conditions)
		<pg:param name="${condition.fieldName}"/>
#end	
		<!-- 加入 class="tableOutline" 可控制表格宽度，滚动条展示 -->
		<div id="changeColor" >
		 <table width="100%" border="0" cellpadding="0" cellspacing="0" class="stable" id="tb">
	        <pg:header>
	            <th align=center><input id="CKA" name="CKA" type="checkbox" 
								onClick="checkAll('CKA','CK')">
				#foreach($field in $hiddenfields)
				<input id="$field.fieldName" type="hidden" name="$field.fieldName" value="<pg:cell colName="$field.fieldName" #fieldattr($field)  />"/>
				#end				
				</th>
				<th>序号</th>				
#foreach($field in $fields)
#if($field.sortField)				
	       		<pg:title sort="true" type="th" align="center" colName="$field.columnname"  #if(!$genI18n)title="$field.fieldCNName"#else titlecode="$namespacei18n.$field.fieldName"#end #if(!$field.desc)desc="true"#else desc="false" #end/>
#else
	       		<th>#if(!$genI18n)$field.fieldCNName#else<pg:message code="$namespacei18n.$field.fieldName"/>#end</th>
#end	       		
#end	  		
				<th>操作</th>
	       	</pg:header>	
	      <pg:list>
	
	   		<tr onDblClick="view${entityName}('<pg:cell colName="${primaryKeyName}" #fieldattr($primaryKeyField) />')">
	   		        <td class="td_center">
	                    <input id="CK" type="checkbox" name="CK" onClick="checkOne('CKA','CK')" value="<pg:cell colName="${primaryKeyName}" #fieldattr($primaryKeyField) />"/>
	                    <input id="${primaryKeyName}" type="hidden" name="${primaryKeyName}" value="<pg:cell colName="${primaryKeyName}" #fieldattr($primaryKeyField) />"/></td>
	                <td><pg:rowid increament="1" offset="false"/></td>    
#foreach($field in $fields)	                    
	                <td>#if($field.maxlength>0)<span class="toolTip" title="<pg:cell colName="$field.fieldName"/>"><pg:cell colName="$field.fieldName" maxlength="$field.maxlength" #if($field.replace)replace="$field.replace"#end/></span>#else<pg:cell colName="$field.fieldName" #fieldattr($field)/>#end</td>
#end	                
	        		
	                <td class="td_center"><a href="javascript:void(0)" id="read${entityName}" onclick="view${entityName}('<pg:cell colName="${primaryKeyName}" #fieldattr($primaryKeyField)/>')">查看</a><a href="javascript:void(0)" id="edit${entityName}" onclick="edit${entityName}('<pg:cell colName="${primaryKeyName}" #fieldattr($primaryKeyField)/>')">编辑</a><a href="javascript:void(0)" id="del${entityName}" onclick="del${entityName}('<pg:cell colName="${primaryKeyName}" #fieldattr($primaryKeyField)/>')">删除</a></td>    
	                 
	        </tr>
		 </pg:list>
	    </table>
	    </div>
		<div class="pages"><input type="hidden" value="<pg:querystring/>" id="querystring"/><pg:index tagnumber="10" sizescope="5,10,20,50,100"/></div>
	
	    </pg:pager>
	</pg:no>
</pg:empty> 
</div>		
